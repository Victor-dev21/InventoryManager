<%= form_for @user , url: '/login' do |f| %>
<% if @user.errors.any? %>
  <div id="error_explanation">
    <h5>Errors:</h5>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%=f.label :username%> <%=f.text_field :username%><br>
<%=f.label :password%> <%=f.text_field :password%><br>
  <%= f.submit "Submit" %>
<% end %>
<%=link_to "Or signup", signup_path%>
