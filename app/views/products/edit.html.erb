<h4>Edit product</h4>
<%=form_for @product do |f|%>
<%=f.label :name%>
<%=f.text_field :name%>
<%=f.label :quantity%>
<%=f.text_field :quantity%>
<%=f.label :price%>
<%=f.text_field :price%>
<%= f.fields_for :location, @product.location do |local| %>
  <%=f.label :location%>
  <%= local.text_field :name %>
 <% end %>
<%=f.collection_select :category_id,Category.all,:id,:name%>
<%=f.submit=%>
<%end%>
